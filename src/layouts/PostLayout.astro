---
import DefaultLayout from "./DefaultLayout.astro";
import { SEO } from "astro-seo";
import "../assets/style/main.scss";
import "../assets/style/components/post.scss";

interface Props {
  pageTitle: string;
  pageDescription: string;
  postTitle: string;
}

const { pageTitle, pageDescription, postTitle } = Astro.props;
---

<script>
  import { getTheme } from "../utils/theme";
  document.addEventListener("DOMContentLoaded", () => getTheme());
</script>

<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <SEO
      title={pageTitle}
      description={pageDescription}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "viewport",
            content: "width=device-width",
          },
          {
            name: "generator",
            content: Astro.generator,
          },
        ],
      }}
    />
  </head>
  <body>
    <DefaultLayout>
      <section class="min-100-vh container mt-6 mb-6">
        <a class="quinary-color is-size-6-mobile ml-4" href="/blog"
          >ðŸ‘ˆ&nbsp;<u class="is-size-6-mobile">Return to blog</u></a
        >
        <header class="has-text-centered mr-4 ml-4 m-6-desktop mt-6 fade-in">
          <h1 class="is-size-1-desktop is-size-2-tablet is-size-4-mobile black">
            {postTitle}
          </h1>
        </header>
        <section
          class="mr-6-desktop ml-6-desktop mr-6-tablet ml-6-tablet ml-4 mr-4 fade-in"
        >
          <slot />
        </section>
      </section>
    </DefaultLayout>
  </body>
</html>
