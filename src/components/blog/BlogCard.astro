---
import { Icon } from "astro-icon";
import { getFormattedDate } from "../../utils/utils";

interface Props {
  title: string;
  date: Date;
  description: string;
  devLink?: string;
  mediumLink?: string;
  slug?: string;
}

const { title, date, description, slug, devLink, mediumLink } = Astro.props;
---

<div class="card min-18-vh">
  <div class="media-content has-text-left h-6">
    <h4 class="title is-size-4">
      {title}
    </h4>
    <p class="subtitle is-size-5 is-flex">
      <Icon class="mr-1" size={22} name="ion:time-outline" />
      <time datetime={String(date)}> {getFormattedDate(date)}</time>
    </p>

    <div class="columns is-multiline">
      <div class="column is-12">
        <p>{description}</p>
      </div>
      <div class="column is-2">
        {
          devLink !== undefined && (
            <a href={devLink}>
              {" "}
              <Icon size={38} name="fa-brands:dev" />
            </a>
          )
        }
        {
          mediumLink !== undefined && (
            <a href={mediumLink}>
              {" "}
              <Icon size={38} name="fa-brands:medium" />
            </a>
          )
        }
      </div>
    </div>
    <div class="columns">
      <div class="column is-12">
        <a href={slug}><h6 class="primary-color">Read more</h6></a>
      </div>
    </div>
  </div>
</div>
<style>
  .columns {
    margin-left: -0.75rem;
    margin-right: -0.75rem;
    margin-top: -0.75rem;
  }
</style>
